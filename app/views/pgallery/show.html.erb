
<div class="informacion">

  <div class="titulo">
    INFORMACION
  </div>
  <center>
    <div class="ajuste">
			<div class="profesor">
				<h2><strong><u><%= @profesor.titulo%>. <%= @profesor.nombre%> <%= @profesor.ap_pat%> <%= @profesor.ap_mat%></u></strong></h2>	<!--Nombre del profesor-->
			</div>
      <div class="datos">
				<center>
					<dl>
						<dt><strong>Contacto:</strong></dd><br> <!--Clave-->
            <dd><%= @profesor.email%></dd><br>
					</dl>
				</center>
			</div>
      <div class="imagen">
        <center>
          <img align="center" src="<%= @profesor.image %>" width="140" height="140">

        </center>
      </div>
		</div>
  </center>
</div>

<div class="materias_impartidas">
  <div class="titulo">
    MATERIAS IMPARTIDAS
  </div>

  <br>
<% clase_impartidas = Clase.where(profesor_id: @profesor.id)%>
<% clase_impartidas.each do |c_i|%>
    <%nombre_materia = Materium.find_by(id: c_i.materium_id)%>
    <center>
    <div class="ajuste">
      <div class="item">
        <%=image_tag("profesor.jpg", height: '200', width: '200')%><!--Imagen de la materia-->
        <p><strong><%= link_to nombre_materia.nombre, c_i%></strong></p><!--Nombre de la materia-->
      </div>
    </div>
  </center>
<% end%>



  <center>

  </center>


</div>
