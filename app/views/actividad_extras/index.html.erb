<p id="notice"><%= notice %></p>

<h1>Actividad Extras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actividad_extras.each do |actividad_extra| %>
      <tr>
        <td><%= actividad_extra.nombre %></td>
        <td><%= actividad_extra.descripcion %></td>
        <td><%= link_to 'Show', actividad_extra %></td>
        <td><%= link_to 'Edit', edit_actividad_extra_path(actividad_extra) %></td>
        <td><%= link_to 'Destroy', actividad_extra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

