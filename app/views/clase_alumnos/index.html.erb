<h1>Clase Alumnos</h1>

<table>
  <thead>
    <tr>
      <th>Alumno</th>
      <th>Clase</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clase_alumnos.each do |clase_alumno| %>
      <tr>
        <td><%= clase_alumno.alumno %></td>
        <td><%= clase_alumno.clase %></td>
        <td><%= clase_alumno.comentario %></td>
        <td><%= link_to 'Show', clase_alumno %></td>
        <td><%= link_to 'Edit', edit_clase_alumno_path(clase_alumno) %></td>
        <td><%= link_to 'Destroy', clase_alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

